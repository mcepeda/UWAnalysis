   --merge \
   --input-files-per-job=100 \
   --input-dir=root://cmsxrootd.hep.wisc.edu//store/user/tperry/${version}_T_t-MuNuPAT_newPAT \
   merged_${version}_T_t \
   $CMSSW_BASE

