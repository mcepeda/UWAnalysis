   --merge \
   --input-files-per-job=100 \
   --input-dir=root://cmsxrootd.hep.wisc.edu//store/user/tperry/${version}_Drell-MuNuPAT_newPAT \
   merged_${version}_Drell \
   $CMSSW_BASE

