   --merge \
   --input-files-per-job=100 \
   --input-dir=root://cmsxrootd.hep.wisc.edu//store/user/tperry/${version}_W4Jet-MuNuPAT \
   merged_${version}_W4Jet \
   $CMSSW_BASE

