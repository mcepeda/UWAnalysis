#!/bin/sh
# Author: T.M.Perry UW-Madison
# Merges MC samples using farmout (uses mergeFiles.C)

voms-proxy-init --voms cms --valid 100:00

version="post_synch_v0"

farmoutAnalysisJobs \
   --merge \
   --input-files-per-job=100 \
   --input-dir=root://cmsxrootd.hep.wisc.edu//store/user/tperry/${version}_W1Jet-MuNuPAT_newPAT \
   merged_${version}_W1Jet \
   $CMSSW_BASE

farmoutAnalysisJobs \
   --merge \
   --input-files-per-job=100 \
   --input-dir=root://cmsxrootd.hep.wisc.edu//store/user/tperry/${version}_W2Jet-MuNuPAT_newPAT \
   merged_${version}_W2Jet \
   $CMSSW_BASE

farmoutAnalysisJobs \
   --merge \
   --input-files-per-job=100 \
   --input-dir=root://cmsxrootd.hep.wisc.edu//store/user/tperry/${version}_W3Jet_p1-MuNuPAT_newPAT \
   merged_${version}_W3Jet_p1 \
   $CMSSW_BASE

farmoutAnalysisJobs \
   --merge \
   --input-files-per-job=100 \
   --input-dir=root://cmsxrootd.hep.wisc.edu//store/user/tperry/${version}_W3Jet_p2-MuNuPAT \
   merged_${version}_W3Jet_p2 \
   $CMSSW_BASE

